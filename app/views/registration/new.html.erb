<!DOCTYPE html>
<html>
<head>
  <title>Registration</title>
</head>
<body>
  <div class="container">
    <div class="row justify-content-center align-items-center vh-100">
      <div class="col-md-6">
        <div class="border p-4 rounded border-secondary">
          <div class="text-center mb-4">
            <h1>Registration</h1>
          </div>

          <%= form_with(model: @user, url: registration_path) do |form| %>
            <div class="mb-3">
              <%= form.label :email, "Email:", class: "form-label" %>
              <%= form.email_field :email, class: "form-control border-secondary" %>
            </div>

            <div class="mb-3">
              <%= form.label :password, "Password:", class: "form-label" %>
              <%= form.password_field :password, class: "form-control border-secondary" %>
            </div>

            <div class="d-grid gap-2">
              <%= form.submit "Register", class: "btn btn-primary" %>
              <%= link_to "Already have an account?", login_path, class: "btn btn-secondary mt-2" %>
            </div>
          <% end %>


        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const flashNotice = document.querySelector(".alert.alert-success");
      if (flashNotice) {
        alert(flashNotice.textContent);
      }
    });
  </script>
</body>
</html>
